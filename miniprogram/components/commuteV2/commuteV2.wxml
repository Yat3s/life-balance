<view class="border border-solid border-gray-200 p-4 rounded-lg">
  <!-- Parking -->
  <view bindtap="refresh">
    <view class="flex items-center justify-between">
      <view class="font-bold text-xs">Parking Space</view>
      <image class="parking-refresh-icon {{loadingParkingSpace ? 'animation-rotate' : ''}}" src="/images/ic_refresh.png"></image>
    </view>
    <view class="mt-10 pb-8 border-0 border-b border-dashed border-gray-200">
      <view class="flex items-center justify-between">
        <!-- B25 -->
        <view class="flex flex-col items-center">
          <progressRing targetProgress="{{parkingSpace.b25.usedPercent}}" initialColor="{{ parkingSpace.b25.initialColor }}" finalColor="{{ parkingSpace.b25.finalColor }}" progressDuration="{{ parkingSpace.b25.progressDuration }}" colorChangeDuration="{{ parkingSpace.b25.colorChangeDuration }}">
            <view class="flex flex-col items-center">
              <image src="/images/ic_car_parking.png" class="w-8 h-12 -mt-2" mode="widthFix" />
              <text class="text-xxs text-gray-400 -mt-2">B25</text>
            </view>
          </progressRing>
          <view class="flex items-baseline">
            <view class="text-lg font-bold {{parkingSpace.b25.remaining === 0 ? 'text-gray-400' : ''}}">{{parkingSpace.b25.remaining}}</view>
            <view class="text-xs text-gray-400">/{{parkingConfig.b25.maxSpaces}}</view>
          </view>
        </view>

        <!-- Zhongmeng -->
        <view class="flex flex-col items-center">
          <progressRing targetProgress="{{ parkingSpace.zhongmeng.usedPercent }}" initialColor="{{ parkingSpace.zhongmeng.initialColor }}" finalColor="{{ parkingSpace.zhongmeng.finalColor }}" progressDuration="{{ parkingSpace.zhongmeng.progressDuration }}" colorChangeDuration="{{ parkingSpace.zhongmeng.colorChangeDuration }}">
            <view class="flex flex-col items-center">
              <image src="/images/ic_car_parking.png" class="w-8 h-12 -mt-2" mode="widthFix" />
              <text class="text-xxs text-gray-400 -mt-2">中盟</text>
            </view>
          </progressRing>
          <view class="flex items-baseline">
            <view class="text-lg font-bold {{parkingSpace.zhongmeng.remaining === 0 ? 'text-gray-400' : ''}}">{{parkingSpace.zhongmeng.remaining}}</view>
            <view class="text-xs text-gray-400">/{{parkingConfig.zhongmeng.maxSpaces}}</view>
          </view>
        </view>

      </view>
    </view>

    <view class="margin-top-sm text-gray-400 text-xxs">车位已满？试试以下方案：</view>
    <view class="flex gap-2 mt-1">
      <view bind:tap="toShuttleTip" class="whitespace-nowrap py-1 px-2 bg-link rounded-full flex items-center text-xxs text-link">
        <view>
          中盟
        </view>
        <image class="switch-icon " src="/images/ic_switch_blue.png"></image>
        <view>
          B25 接驳车
        </view>
      </view>

      <view bind:tap="toParkingTip" class="whitespace-nowrap py-1 px-2 bg-link rounded-full flex items-center text-xxs text-link">
        其他停车方案
      </view>
    </view>
  </view>
</view>