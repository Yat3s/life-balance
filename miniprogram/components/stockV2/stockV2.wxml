<view>
  <view class="p-4 flex items-center justify-between rounded-xl stock-border stock-bg">
    <view class="">
      <view class="text-bold text-sm stock-title">微软市值第一了吗？</view>
      <view class="flex items-baseline gap-1">
        <view class="font-bold stock-title">{{stockData.msft.price}}</view>
        <view class="text-xs text-gray-400">{{stockData.msft.change}}%</view>
      </view>
    </view>

    <image wx:if="{{stockData.msftTop1}}" src="/images/ic_emoji_yes.png" class="w-8 h-8"></image>
    <image wx:if="{{!stockData.msftTop1}}" src="/images/ic_emoji_no.png" class="w-8 h-8"></image>

    <view class="flex items-center gap-2">
      <view class="text-sm font-bold text-gray-400">
        {{stockData.top1.symbol}}({{stockData.top1.mktcap}}T)
      </view>
      <view class="text-xs text-gray">
        <view>
          - {{stockData.top2.symbol}}({{stockData.top2.mktcap}}T)
        </view>
        <view>
          - {{stockData.top3.symbol}}({{stockData.top3.mktcap}}T)
        </view>
        <view>
          - {{stockData.top4.symbol}}({{stockData.top4.mktcap}}T)
        </view>
      </view>
    </view>
  </view>
</view>