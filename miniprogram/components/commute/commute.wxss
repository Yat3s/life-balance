/* components/commute/commute.wxss */

.main {
  padding: 36rpx;
  border-radius: 28rpx;
  background: linear-gradient(140deg, #E1EDF1 0%, #FAFBFC 100%);
}

.commute-icon {
  width: 48rpx;
  height: 48rpx;
}

.commute-title {
  font-weight: bold;
  color: black;
  font-size: 12pt;
}

.parking-refresh-icon {
  width: 40rpx;
  height: 40rpx;
}

.prediction-icon {
  width: 40rpx;
  height: 40rpx;
}

.parking-predict-text {
  font-size: 9pt;
  color: var(--textGrey);
}

.full-tip {
  color: var(--textGrey);
  font-size: 9pt;
}

.full-tip-underline {
  color: #7F6CA7;
  text-decoration: underline;
}

.tip-text {
  color: #7F6CA7;
  text-decoration: underline;
  font-size: 9pt;
}

.shuttle-tip {
  color: #7F6CA7;
  font-size: 9pt;
}

.shuttle-tip-icon {
  width: 12px;
  height: 12px;
  margin-left: 4px;
  margin-right: 4px;
}

.tip-container {
  border-radius: 12rpx;
  border: 1rpx solid #dadada;
}

.parking-left-title {
  color: var(--textGrey);
  font-size: 10pt;
}

.parking-progress-container {
  background: #DFDFDF;
  border-radius: 36rpx;
  height: 32rpx;
  width: 200rpx;
  overflow: hidden;
}

.parking-progress-indicator {
  background: linear-gradient(97.82deg, #90ABF1 9.38%, #573189 95.98%);
  border-radius: 2rpx;
  height: 32rpx;
  transition: width 1s;
}

.parking-left-count {
  font-weight: bold;
  font-size: 20pt;
  line-height: 20pt;
  letter-spacing: 4rpx;
  color: black;
}

.parking-all-count {
  font-size: 10pt;
  line-height: 10pt;
  letter-spacing: 3rpx;
  color: #b1b1b1;
  margin-left: 6rpx;
}

.divider {
  height: 1rpx;
  background-color: #e9e9e9;
  width: 100%;
}

.divider-container {
  height: 40rpx;
}

.detail-button {
  background: white;
  font-size: 9pt;
  color: var(--textGrey);
  padding: 12rpx 24rpx;
  border-radius: 60rpx;
}

.forward-icon {
  width: 32rpx;
  height: 32rpx;
}