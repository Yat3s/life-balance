page {
  background-color: #fff;
  padding-bottom: 5rem;
}

.text-gray {
  color: #acacac;
}

.text-drawn-time {
  color: #a1a1a3;
}

.bg-drawn {
  background-color: #fafafa;
}

.text-none-drawn {
  color: #b7b7b7;
}

.bg-button {
  background-color: #3785fc;
}

.line {
  background-color: #eaeaea;
  height: 1rpx;
}

.text-ads-desc {
  color: #989898;
}

.truncate-ellipsis {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 400rpx;
}

.bg-lottery-history {
  background-color: #fafafa;
}

.border-gray-light {
  border: 1rpx solid #f1f1f1;
}

.share-btn {
  background: none;
  border: none;
  padding: 0 !important;
  margin: 0 !important;
  width: auto !important;
  height: auto !important;
  min-height: 0 !important;
  line-height: 1 !important;
  display: flex;
  align-items: center;
  color: #576b95;
  font-size: 24rpx;
}

.share-btn::after {
  display: none;
  border: none;
}

.share-btn[hover] {
  background: none;
}

.share-btn:active {
  opacity: 0.8;
}

.share-btn text {
  white-space: nowrap;
}
