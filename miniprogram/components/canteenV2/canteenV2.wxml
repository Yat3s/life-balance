<view bindtap="toMenuDetail" class="border border-solid border-gray-200 p-4 pb-0 pr-0 rounded-lg flex flex-col justify-between">
  <view>
    <view class="font-bold text-sm">Canteen</view>

    <view class="flex justify-between {{wastedFoodWeight != '0' ? 'items-start' : 'items-center mt-2'}}">
      <view class="mt-2 flex flex-col gap-4">
        <view wx:if="{{wastedFoodWeight != '0'}}" class="text-xs text-gray">
          <text>上周共浪费了 <text class="text-tip">{{wastedFoodWeight}} kg</text></text>
          <text>，可以换成 <text class="text-tip">{{replaceFoodCount}} 餐</text></text>
        </view>

        <view class="flex gap-2 items-center justify-between {{wastedFoodWeight != '0' ? '' : '-mt-6'}}">
          <view class="flex flex-1 gap-2 items-center">
            <view>
              <view class="font-bold text-sm">{{todayMenuB25.canteenName}}</view>
              <view class="text-date text-xs">{{todayMenuB25.startDateStr}} - {{todayMenuB25.endDateStr}}</view>
            </view>
            <view>
              <view class="font-bold text-sm">{{todayMenuZhongmeng.canteenName}}</view>
              <view class="text-date text-xs">{{todayMenuZhongmeng.startDateStr}} - {{todayMenuZhongmeng.endDateStr}}</view>
            </view>
          </view>
        </view>
      </view>

      <view class="relative right-0 food-bg w-1on3dot5 h-24 flex items-center justify-center {{wastedFoodWeight != '0' ? '' : '-mt-6'}}">
        <view class="relative w-full h-full content-center">
          <image src="/images/img_steak.png" class="w-12 h-12 steak" mode="widthFix" />
          <image src="/images/img_taco.png" class="w-14 h-14 taco" mode="widthFix" />
          <image src="/images/img_carrot.png" class="w-12 h-12 carrot" mode="widthFix" />
        </view>
      </view>
    </view>
  </view>
</view>