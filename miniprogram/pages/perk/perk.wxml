<toolbar isBack="{{true}}" bgColor="bg-white">
</toolbar>
<scroll-view scroll-y="true">
  <view class="plr">
    <view class="pt-8 pl-6 pb-4">
      <view class="title">Perks</view>
      <view class="subtitle">
        Staff Partner Discounts
      </view>
    </view>
    <!-- Partner Merchant List -->
    <view class="flex flex-col gap-4 pb-6">
      <!-- Partner Merchant Item -->
      <view wx:for="{{partnerMerchants}}" wx:key="id" bindtap="onPartnerMerchantItemTap" data-partner-merchant-id="{{item._id}}" class="flex flex-col p-6 pb-4 bg-white rounded-lg">
        <view class="flex items-center gap-4">
          <image src="{{item.logo}}" lazy-load="{{true}}" class="w-10 h-logo bg-gray-200 rounded-md" />
          <view class="flex-1 text-black text-xl font-w-450 truncate">
            {{item.name}}
          </view>
        </view>
        <view class="mt-4 text-gray text-xs truncate">
          {{item.location.address}}
        </view>
        <view class="mt-8 flex items-center gap-2">
          <view class="text-black text-xl whitespace-nowrap">
            {{item.promotion.discount}}
          </view>
          <view class="flex flex-wrap gap-2">
            <block wx:if="{{item.promotion.eligibleItems.length > 0}}">
              <view wx:for="{{item.promotion.eligibleItems}}" wx:key="eligibleItems" class="tag">
                <view class="left-circle"></view>
                <view class="text-xxs tag-text">
                  {{item}}
                </view>
              </view>
            </block>
            <block wx:else>
              <view class="tag">
                <view class="left-circle"></view>
                <view class="text-xxs tag-text">
                  全部商品
                </view>
              </view>
            </block>
          </view>
        </view>
        <view class="h-px bg-gray-100 mb-4 mt-3"></view>
        <view class="flex items-center justify-between">
          <view class="flex items-center gap-4">
            <view class="flex items-center">
              <!-- avatar -->
              <image wx:for="{{item.comments}}" bindtap="onGoProfile" data-user-id="{{item.userId}}" wx:key="avatarUrl" src="{{item.avatarUrl}}" lazy-load="{{true}}" class="w-6 h-6 bg-gray-200 rounded-full {{index !== 0 ? '-ml-2' : ''}}" />
            </view>
            <view class="text-xs text-gray">{{item.commentCount}} 条评论</view>
          </view>
          <image src="/images/ic_arrow.svg" class="h-4 -mr-0dot5" mode="heightFix" />
        </view>
      </view>
    </view>
  </view>
</scroll-view>