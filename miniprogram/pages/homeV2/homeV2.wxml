<view class="appbar" style="height: {{appBarHeight}}px;">
  <view style="padding-top: {{statusBarHeight * 2}}px;min-height: {{toolbarHeight}}px;{{collapsed ? 'height:' + appBarHeight + 'px;' : ''}}" class="bg-white toolbar plr {{collapsed? 'shadow' : ''}}">
    <view class="ml-1 flex flex-col justify-center gap-1">
      <view style="font-size: {{titleScale * 14}}pt; line-height: {{titleScale * 14}}pt;" class="user-name">
        Hi, {{userInfo ? userInfo.nickName : 'Friend!'}}
      </view>
      <view style="font-size: {{titleScale * 10}}pt; line-height: {{titleScale * 11}}pt;" class="user-welcome-message margin-top-xs">
        {{nowDateInEnglish}} - {{welcomeMessage}}
      </view>
    </view>
    　
  </view>
</view>

<scroll-view scroll-y="true" class="main pb-24" bindscroll="onPageScrolled">
  <view style="height:100px;">
  </view>
  <view class="mt-12">
    <stockV2></stockV2>
  </view>
  <view class="margin-left mt-10 widget-section-title text-xs">Board for 微软(中国)有限公司 - 苏州</view>

  <view class="flex flex-col gap-2 mt-4">
    <view class="flex gap-2 items-stretch">
      <!-- Parking Space -->
      <view class="flex-1 flex">
        <commuteV2 class="w-full"></commuteV2>
      </view>

      <!-- Canteen -->
      <view class="flex-0dot7 flex">
        <canteenV2 class="w-full"></canteenV2>
      </view>
    </view>

    <view class="flex gap-2">
      <!-- Latest Circle -->
      <view class="flex-1">
        <latestCircle></latestCircle>
      </view>

      <!-- Upcoming Activity -->
      <view class="flex-1">
        <upcomingActivity></upcomingActivity>
      </view>
    </view>
  </view>

</scroll-view>